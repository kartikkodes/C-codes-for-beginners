#include<stdio.h>
#include<direct.h>
#include<conio.h>
#include<string.h>
main()
{
	int x;
	char str[4], fix[4]="abcd";
	char ch;
	printf("Enter your 4 digit password\n");
	for(x=0;x<4;x++)
	{
		ch=getch();
		printf("*");
		str[x]=ch;
	}
	str[x]='\0';
	if(strcmp(str,"abcd")==0)
    {
	printf("\nPassword accepted! Welcome");
    }
    else
	{
    printf("\nIncorrect Password!Try again");
    }
    
    getch();
}
