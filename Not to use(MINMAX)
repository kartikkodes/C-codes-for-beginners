float average();
void main()
{
	char c;
    	c=average();
}
float average()
{
    int a,i,max=0,min=0;
    
    for(i=1;a!=0;i++)
    {

        	printf("enter the number");
        	scanf("%d",&a);
        	if(max<a)
        	max=a;
        	if(a!=0 && min>a)
        	min=a;
    }
    return(printf("Maximum number is %d and minimum number is %d",max,min));
   
}
