#include<stdio.h>
main()
{
	int i,count=0;
	char s[15];
	printf("Enter a string\n");
	gets(s);
	for(i=0;s[i]!='\0';i++)
	{
		if(s[i]=='a'||s[i]=='A'||s[i]=='e'||s[i]=='E'||s[i]=='i'||s[i]=='I'||s[i]=='o'||s[i]=='O'||s[i]=='u'||s[i]=='U')
		{
			count++;
		}
	}
		if(count==0)
		{
			printf("No vowels");
		}
		else
		{
			printf("%d vowels are in the string",count);
		}
	}

