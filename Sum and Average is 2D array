#include<stdio.h>
main()
{
	int arr[3][4];
	int i,j,sum=0;
	
	for(i=0;i<=2;i++)
	{
		for(j=0;j<=3;j++)
		{
			printf("Enter a number\n");
			scanf(" %d",&arr[i][j]);
			sum=sum+arr[i][j];
		}
	}
	for(i=0;i<=2;i++)
	{
		for(j=0;j<=3;j++)
		{
			printf("    %d",arr[i][j]);
		}
		printf("\n");
	}
	printf("Sum is=%d\n",sum);
		printf("Avg is %.2f",(float)sum/12);
}
